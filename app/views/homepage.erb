<h1>Battle of the Living Legends</h1>

<form action="/vote_added" method="post">
  <fieldset>
    <legend>Choose the Better Legend:</legend>

      <form>
      <% @legends.each do |l| %>
        <input type="radio" name="name" value="<%= l.name %>"><%= l.name %><br>
      <% end %>
      <input type="submit" value="vote">     
      </form>

  </fieldset>
</form>